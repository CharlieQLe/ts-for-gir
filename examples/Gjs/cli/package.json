  "devDependencies": {
    "fork-ts-checker-webpack-plugin": "^7.2.1",
    "ts-loader": "^9.2.7",
    "typescript": "^4.6.2",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  }
}
